<%- include('../includes/head.ejs', { username: username, permisos: permisos, rol: rol }) %>

<meta name="_csrf" content="<%= csrfToken %>">

<body>
    <h1>Actualizar Base de Datos</h1>
    <form action="/configuracion/actualizarAlumnos" method="GET">
        <button type="submit" id="buscarBtn" class="button is-rounded is-large is-responsive">Obtener Alumnos</button>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    </form>
    <form action="/configuracion/actualizarMaterias" method="GET">
        <button type="submit" id="buscarBtn" class="button is-rounded is-large is-responsive">Obtener Materias</button>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    </form>
    <button onclick="actualizarGrupos()" type="submit" id="buscarBtn" class="button is-rounded is-large is-responsive">Obtener Grupos</button>
    <script type="text/javascript" src="/js/actualizarBase.js"></script>
</body>
</html>
