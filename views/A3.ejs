<%- include('includes/dropdown_alumno_2.ejs') %>
<body>
                <!-- Area de pago -->
                <main class="main-content">
                <div class="box">
                    <form>
                        <div class="field">
                            <label class="label" for="reason">Motivo:</label>
                            <div class="control has-icons-right">
                                <div class="select is-fullwidth">
                                    <select id="reason">
                                        <option>Pago extra</option>
                                    </select>
                                </div>
                                <div class="icon is-small is-right">
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="concept">Concepto:</label>
                            <div class="control">
                                <input class="input" type="text" id="concept" value="Tornillo M5">
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="amount">Monto a pagar:</label>
                            <div class="control">
                                <input class="input" type="text" id="amount" value="20">
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="note">Nota:</label>
                            <div class="control">
                                <textarea class="textarea" id="note"></textarea>
                            </div>
                        </div>

                        <div class="field is-grouped">
                            <div class="control">
                                <button class="button is-danger" type="button">
                                    <i class="fas fa-wallet"></i> Pagar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
</body>

</html>
