<%- include('../includes/head.ejs', { 
    username: username, 
    permisos: permisos, 
    rol: rol }) 
%>
<body>
    <section class="section">
        <div class="container">
            <div class="columns">
            <div class="column is-1 is-offset-3">
                <a id="Boton_regresar" type="submit" class="is-responsive"
                    onclick="regresar()">
                    <span class="icon">
                        <i class="fas fa-arrow-left fa-2x"></i>
                    </span>
                </a>
            </div>
            <div class="column">
                <label class="label is-large has-text-danger has-text-weight-semibold">
                    REGISTRAR DIPLOMADO
                </label>
            </div>
        </div>
        </div>
        
        <div class="container" style="display: flex; justify-content: center;">
            <form id="formDiplomado" action="/diplomado/registrar_diplomado" method="POST" style="width: 50%; margin-top: 50px;" placeholder="Horas / meses">
                <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>">

                <div class="columns">
                    <div class="column is-3">
                        <label class="label is-medium" for="nombreDiplomado">Nombre:</label>
                    </div>
                    <div class="column">
                        <div id="errorNombre" style="color: #95404c;"></div> <!-- Mensaje de error para el nombre -->
                        <div class="field">
                            <p class="control has-icons-left">
                                <input name="nombreDiplomado" class="input is-medium" id="nombreDiplomado"
                                    placeholder="Nombre del Diplomado" onchange="validateAll()" type="text">
                                <span class="icon is-small is-left">
                                    <i class="fa-solid fa-graduation-cap" style="color: #95404c;"></i>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="columns">
                    <div class="column is-3">
                        <label class="label is-medium" for="precioDiplomado">Precio:</label>
                    </div>
                    <div class="column">
                        <div id="errorPrecio" style="color: #95404c;"></div> <!-- Mensaje de error para el precio -->
                        <div class="field">
                            <p class="control has-icons-left">
                                <input name="precioDiplomado" class="input is-medium" id="precioDiplomado"
                                    placeholder="Precio del Diplomado" onchange="validateAll()" type="number">
                                <span class="icon is-small is-left">
                                    <i class="fa-solid fa-dollar-sign" style="color: #95404c;"></i>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="columns">
                    <div class="column">
                        <label class="label is-medium" for="Fecha Inicio">Fecha Inicio / Fecha Fin:</label>
                    </div>
                </div>
                    <div class="field">
                        <p class="control has-icons-left">
                            <input type="date" id="fecha" name="fecha" class="datepicker">
                        </p>
                    </div>
            
                <p id="errorMessage" style="color: #95404c;"></p>

                <div class="column is-offset-5">
                    <p class="control">
                        <button type="submit" id="btnSubmit" class="confirmar-button is-medium is-responsive"
                            style="font-size: large; padding-left: 1em;">
                            <span>REGISTRAR DIPLOMADO</span>
                            <span class="icon is-large">
                                <i class="fa-solid fa-circle-chevron-right" style="color: #ffffff;"></i>
                            </span>
                        </button>
                    </p>
                </div>
            </form>
        </div>
    </section>

    <script type="text/javascript" src="/js/registrar_diplomado.js"></script>
    <script type="text/javascript" src="/js/boton_regresar.js"></script>
</body>
<%- include('../includes/foot.ejs') %>
